local player = game.Players.LocalPlayer
local playerGui = player:WaitForChild("PlayerGui")

-- XÃ³a GUI cÅ©
if playerGui:FindFirstChild("Cac2DevVIPGUI") then
    playerGui.Cac2DevVIPGUI:Destroy()
end

-- ScreenGui
local screenGui = Instance.new("ScreenGui")
screenGui.Name = "Cac2DevVIPGUI"
screenGui.Parent = playerGui

-- Frame chÃ­nh nhá» gá»n
local frame = Instance.new("Frame")
frame.Size = UDim2.new(0, 250, 0, 120)
frame.Position = UDim2.new(0.5, -125, 0.5, -60)
frame.BackgroundColor3 = Color3.fromRGB(30,30,30)
frame.AnchorPoint = Vector2.new(0.5,0.5)
frame.Parent = screenGui
frame.ClipsDescendants = true

-- Bo trÃ²n + neon
local uicorner = Instance.new("UICorner")
uicorner.CornerRadius = UDim.new(0,20)
uicorner.Parent = frame

local uistroke = Instance.new("UIStroke")
uistroke.Thickness = 2
uistroke.Color = Color3.fromRGB(0,255,200)
uistroke.Parent = frame

-- Gradient
local uigradient = Instance.new("UIGradient")
uigradient.Color = ColorSequence.new{
    ColorSequenceKeypoint.new(0, Color3.fromRGB(0,255,128)),
    ColorSequenceKeypoint.new(1, Color3.fromRGB(0,128,255))
}
uigradient.Rotation = 45
uigradient.Parent = frame

